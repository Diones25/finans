<%- include('../../partials/header.ejs'); -%>

  <div class="container">
    <div class="row">
      <div class="col-md-8">
        <h1 class="my-4">Lista de gastos</h1>

        <div>
          <table class="table table-bordered table-hover">
            <thead>
              <tr class="table-info">
                <th scope="col">Descrição</th>
                <th scope="col">Valor</th>
                <th scope="col">Ações</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>gasto de teste 3</td>
                <td>42</td>
                <td>
                  <div class="d-flex justify-content-end">
                    <a href="" class="btn btn-warning me-2">Editar</a>
                    <a href="" class="btn btn-danger">Excluir</a>
                  </div>
                </td>
              </tr>
            </tbody>
          </table>
          <div class="d-flex justify-content-end">
            <a href="/spents/render/create" class="btn btn-outline-success">Adicionar gasto</a>
          </div>
        </div>

        <div class="mt-3">
          <table class="table table-bordered table-hover">
            <thead>
              <tr class="table-info">
                <th scope="col">Categoria</th>
                <th scope="col">Saldo</th>
                <td>Ações</td>
              </tr>
            </thead>
            <tbody>
              
              <% categorias.forEach(categoria => { %>               
                <tr>
                  <td><%= categoria.nome %></td>                  
                  <td><%= categoria.saldo %></td>
                  <td>
                    <div class="d-flex justify-content-end">
                      <a href="" class="btn btn-success me-2">Adicionar saldo</a>
                      <a href="" class="btn btn-warning me-2">Editar</a>
                      <a href="" class="btn btn-danger">Excluir</a>
                    </div>
                  </td>
                </tr>
              <% }) %>

            </tbody>
          </table>
          <div class="d-flex justify-content-end">
            <a href="/cat/render/create" class="btn btn-outline-success">Adicionar categoria</a>
          </div>
        </div>
      </div>
    </div>
  </div>  

  
  
  
<%- include('../../partials/footer.ejs'); -%>