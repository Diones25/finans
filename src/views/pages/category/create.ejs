<%- include('../../partials/header.ejs'); -%>

<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h1>Adicionar Categoria</h1>
      <form action="/cat/add" method="post">
      
        <div class="mb-3">
          <label for="nome" class="form-label">Nome:</label>
          <input type="text" name="nome" class="form-control" id="nome"> 
          <label for="saldo" class="form-label">Saldo:</label>   
          <input type="text" name="saldo" class="form-control" id="saldo">    
        </div>  
                    
        <div class="d-flex justify-content-end">
          <a href="/spents/all" class="btn btn-outline-success">Voltar</a>
          <button type="submit" class="btn btn-outline-success ms-3">Adicionar</button>
        </div>
      </form>
    </div>
  </div>
</div>


