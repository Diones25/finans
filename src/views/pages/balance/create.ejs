<%- include('../../partials/header.ejs'); -%>

<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h1>Adicionar saldo</h1>
      <form action="/balance/add" method="post">
      
        <div class="mb-3">
          <label for="val" class="form-label">valor:</label>
          <input type="text" name="val_balance" class="form-control" id="val">
        </div>
      
        <div class="mb-3">
          <label for="category" class="form-label">Categoria:</label>
          <select class="form-select" name="idCategory"  id="category" aria-label="Default select example">
            <option selected></option>
            <% categories.forEach(category => { %>               
              <option value="<%= category.id %>"><%= category.name %></option>
            <% }) %>
          </select>
        </div>
              
        <div class="d-flex justify-content-end">
          <a href="/spents/all" class="btn btn-outline-success">Voltar</a>
          <button type="submit" class="btn btn-outline-success ms-3">Adicionar</button>
        </div>
      </form>
    </div>
  </div>
</div>


<%- include('../../partials/footer.ejs'); -%>