generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Gasto {
  id          String    @id @default(uuid())
  valor       Decimal   @db.Decimal(10, 2)
  descricao   String
  categoriaId String
  categoria   Categoria @relation(fields: [categoriaId], references: [id])
}

model Categoria {
  id    String  @id @default(uuid())
  nome  String
  saldo Decimal @db.Decimal(10, 2)
  gasto Gasto[]
}
